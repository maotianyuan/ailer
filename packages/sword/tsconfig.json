{
  "compilerOptions": {
    "declaration": true, // 生成 .d.ts 文件
    "declarationDir": "dist/types", // 声明文件输出路径
    "emitDeclarationOnly": true, // 仅生成声明文件
    "outDir": "dist", // 输出目录
    "baseUrl": ".", // 基础路径
    "paths": {
      "@/*": [
        "packages/*"
      ] // 定义路径别名
    },
    "esModuleInterop": true, // 允许 esModule 兼容
    "skipLibCheck": true, // 跳过库检查
    "moduleResolution": "node", // 模块解析
    "strict": true // 严格模式
  },
  "include": [
    "packages/**/*.ts",
    "packages/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}